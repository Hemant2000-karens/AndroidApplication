<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home1" />

    <androidx.cardview.widget.CardView
        android:layout_width="679dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2">

        <Button
            android:id="@+id/logout_home"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginStart="480dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/logout2"
            android:text="@string/logout" />

        <TextView
            android:id="@+id/usr_name"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/username_field"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#001E77"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="682dp"
        android:layout_height="184dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView6">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gr1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                app:columnCount="4"
                app:rowCount="1"
                app:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/add_buttin"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="23dp"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/button"
                        android:elevation="3dp"
                        android:src="@drawable/icons8_add_database_50" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:text="@string/add_records"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="24sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/issue_but"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="25dp"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/todo"
                        android:elevation="3dp"
                        app:srcCompat="@drawable/icons8_multiple_devices_50" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="@string/issue_mutli_dev"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/repall_but"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="23dp"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/todo"
                        android:elevation="3dp"
                        android:src="@drawable/icons8_maintenance_50" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="@string/replace_multi_dev"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/m_isrep"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="23dp"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/button"
                        android:elevation="3dp"
                        app:srcCompat="@drawable/icons8_iphone_x_50" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="@string/mobile"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gr2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:columnCount="4"
                app:rowCount="1"
                app:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/Sim_repel"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="23dp"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/todo"
                        android:elevation="3dp"
                        app:srcCompat="@drawable/icons8_sim_card_50" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="@string/sim_replace"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/Biomet_repel"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_marginStart="23dp"
                        android:backgroundTint="#FFFFFF"
                        android:contentDescription="@string/todo"
                        android:elevation="3dp"
                        app:srcCompat="@drawable/icons8_touch_id_50" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:text="@string/biometrics_replace"
                        android:textAlignment="center"
                        android:textColor="#CDCA05"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp" />
            </androidx.gridlayout.widget.GridLayout>

            <!--<androidx.gridlayout.widget.GridLayout
                android:id="@+id/gr3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="3dp"
                app:columnCount="4"
                app:rowCount="1"
                app:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="20dp"
                    app:layout_column="3"
                    app:layout_row="0" />
            </androidx.gridlayout.widget.GridLayout>-->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>