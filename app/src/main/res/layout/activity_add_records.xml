<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Cance_button"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="207dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#FD0027"
        android:text="@string/reset" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/forget_bg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="55dp"
        android:layout_toEndOf="@+id/Add_home"
        android:elevation="20dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/add_records"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/Add_home"
        android:layout_width="89dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/home_buttom_icon" />

    <Button
        android:id="@+id/Add_record_button"
        android:layout_width="208dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#00FF5D"
        android:text="@string/add_records" />

    <TextView
        android:id="@+id/timestrap"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="55dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="202dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="serif"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/mobile"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/Add_mobile_Model"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/textfieldui"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown" />

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="120dp">

                    <EditText
                        android:id="@+id/add_m_serial"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_serial"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qr1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="185dp">

                    <EditText
                        android:id="@+id/add_imei1"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_imei_1"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qr2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="250dp">

                    <EditText
                        android:id="@+id/add_m_imei2"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_imei_2"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qr3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="202dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="serif"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/sim_card"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/Spinner3"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/textfieldui"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown" />


                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="130dp">

                    <EditText
                        android:id="@+id/Add_sim_serial"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_serial"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qr4"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="205dp">

                    <EditText
                        android:id="@+id/add_Sim_mob"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_mobile_sim_no"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/qr5"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="202dp"
                    android:layout_height="42dp"
                    android:fontFamily="serif"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/bio_metrics"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/Add_Biom_Model"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/textfieldui"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown" />

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="120dp">


                    <EditText
                        android:id="@+id/Add_bio_serial"
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:autofillHints="no"
                        android:background="@drawable/textfieldui"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="@string/enter_serial"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="315dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/qrcode" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>